{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Nex",
  "colors": {
    "primary": "#2980FB",
    "light": "#BCDDFF",
    "dark": "#2980FB"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["bash", "python", "javascript", "go"],
      "autogenerate": true
    },
    "params": {
      "expanded": "all"
    }
  },
  "search": {
    "prompt": "Search Nex API docs..."
  },
  "metadata": {
    "timestamp": true
  },
  "contextual": {
    "options": ["copy", "view", "claude", "cursor", "chatgpt"]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": ["api-reference/openapi.json"],
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Schema",
            "pages": [
              "api-reference/schema/create-object-definition",
              "api-reference/schema/get-object-definition",
              "api-reference/schema/update-object-definition",
              "api-reference/schema/delete-object-definition",
              "api-reference/schema/create-attribute-definition",
              "api-reference/schema/update-attribute-definition",
              "api-reference/schema/delete-attribute-definition"
            ]
          },
          {
            "group": "Objects",
            "pages": [
              "api-reference/objects/list-all-objects-in-the-workspace"
            ]
          },
          {
            "group": "Records",
            "pages": [
              "api-reference/records/create-a-new-record",
              "api-reference/records/create-or-update-a-record",
              "api-reference/records/list-records-for-a-specific-object-type",
              "api-reference/records/get-a-specific-record-by-id",
              "api-reference/records/update-an-existing-record",
              "api-reference/records/delete-a-record"
            ]
          },
          {
            "group": "Relationships",
            "pages": [
              "api-reference/relationships/create-relationship-definition",
              "api-reference/relationships/list-relationship-definitions",
              "api-reference/relationships/delete-relationship-definition",
              "api-reference/relationships/create-relationship-instance",
              "api-reference/relationships/delete-relationship-instance"
            ]
          },
          {
            "group": "Lists",
            "pages": [
              "api-reference/lists/create-a-list",
              "api-reference/lists/get-a-list",
              "api-reference/lists/delete-a-list",
              "api-reference/lists/list-all-lists-for-a-specific-object",
              "api-reference/lists/upsert-list-member",
              "api-reference/lists/add-record-to-a-list",
              "api-reference/lists/get-records-from-a-specific-list",
              "api-reference/lists/update-record-within-a-list",
              "api-reference/lists/remove-record-from-list"
            ]
          },
          {
            "group": "Tasks",
            "pages": [
              "api-reference/tasks/create-a-task",
              "api-reference/tasks/list-tasks",
              "api-reference/tasks/get-a-task",
              "api-reference/tasks/update-a-task",
              "api-reference/tasks/delete-a-task"
            ]
          },
          {
            "group": "Notes",
            "pages": [
              "api-reference/notes/create-a-note",
              "api-reference/notes/list-notes",
              "api-reference/notes/get-a-note",
              "api-reference/notes/update-a-note",
              "api-reference/notes/delete-a-note"
            ]
          },
          {
            "group": "Timeline",
            "pages": [
              "api-reference/timeline/get-record-timeline"
            ]
          },
          {
            "group": "Search",
            "pages": [
              "api-reference/search/search-records"
            ]
          },
          {
            "group": "Context",
            "pages": [
              "api-reference/context/add-context",
              "api-reference/context/get-artifact",
              "api-reference/context/query-context"
            ]
          },
          {
            "group": "Insights",
            "pages": [
              "api-reference/insights/get-insights",
              "api-reference/insights/stream-insights"
            ]
          },
          {
            "group": "AI Lists",
            "pages": [
              "api-reference/ai-lists/create-ai-list-job",
              "api-reference/ai-lists/get-ai-list-job"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "logo": {
    "light": "/logo/nex-logo-light.svg",
    "dark": "/logo/nex-logo-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:contact@nex.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://nex.ai"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/nexdotai",
      "github": "https://github.com/nex-crm",
      "linkedin": "https://linkedin.com/company/nexdotai"
    }
  }
}
